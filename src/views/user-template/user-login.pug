include ../partials/html-head.pug
head 
    link(rel="stylesheet", href="/assets/css/userLogin.css" type="text/css")
body(lang="ko")
    include ../partials/masthead.pug
    div#signin-container.rs-page-content
        div(role="main").rs-sign-in.as-l-container.rs-sign-in-account.rs-sign-in-has-idms.rs-sign-in-idms-no-sidebar 
            h1(tabindex="-1").as-l-container.rs-sign-in-header.typography-headline-reduced
                |영상을 만드시려면 로그인하세요.
            div.row.rs-sign-in-main.as-l-container
                div.rs-sign-in-content.column
                    div#rt-apple-auth-widget.rt-apple-auth
                        div(
                            role="main" data-theme="dark"
                        )#content.si-body.si-container.container-fluid
                            div(
                                data-mode="inline"
                            ).widget-container.fade-in.restrict-min-content.restrict-max-wh.fade-in
                                div#step.si-step
                                    div#signin.signin.fade-in
                                        div.app-title-html-tag
                                            h2(tabindex="-1").si-container-title.tk-label
                                                |WeTube에 로그인하세요
                                        div.swp-enable.container.si-field-container.password-second-step
                                            div#sign_in_form.signin-form.swp.eyebrow.fed-auth.hide-password
                                                div(dir="ltr")
                                                    if step === "showFirstInput" || !step
                                                        div.account-name
                                                            div
                                                                form(action="/login" method="POST" style="margin: auto;")#sign_in_form
                                                                    div.form-cell-wrapper.form-textbox
                                                                        input(name="step" type="hidden" value="showFirstInput")
                                                                        input(
                                                                            type="text"
                                                                            name="emailOrUsername"
                                                                            required
                                                                            autocorrect="off"
                                                                            autocapitalize="off"
                                                                            aria-required="true"
                                                                            spellcheck="false"
                                                                            autocomplete="off"
                                                                            aria-invalid="false"
                                                                            autofocus
                                                                        )#account_name_text_field.force-ltr.form-textbox-input
                                                                        span(
                                                                            aria-hidden="true"
                                                                        )#apple_id_field_label.form-textbox-label.form-label-flyout
                                                                            |이메일 또는 유저네임
                                                    if step === "showPasswordInput"
                                                        form(action="/login" method="POST" style="margin: auto;")#sign_in_form
                                                            input(name="step" type="hidden" value="showPasswordInput")
                                                            input(
                                                                name="emailOrUsername"
                                                                required
                                                                type="text"
                                                                value=emailOrUsername 
                                                                autocorrect="off"
                                                                autocapitalize="off"
                                                                aria-required="true"
                                                                spellcheck="false"
                                                                autocomplete="off"
                                                                aria-invalid="false"
                                                                placeholder="이메일 또는 유저네임"
                                                            )#account_name_text_field.form-textbox-input
                                                            input(
                                                                name="password"
                                                                required
                                                                type="password"
                                                                aria-required="true"
                                                                autocomplete="off"
                                                                aria-invalid="false"
                                                                placeholder="암호"
                                                            )#password_field_label.form-textbox-input
                                                            button(type="submit" aria-label="계속" aria-disabled="false")#sign-in >
                                            div.si-remember-password
                                                div.form-checkbox
                                                    input(
                                                        type="checkbox"
                                                    )#remember-me.form-checkbox-input
                                                    label(for="remember-me")#remember-me-label.form-label
                                                        span(
                                                            aria-hidden="true"
                                                        ).form-checkbox-indicator
                                                        |아이디 저장
                                            button(
                                                tabindex="0"
                                                aria-label="계속"
                                                aria-disabled="true"
                                                disabled
                                            )#sign-in.si-button.btn.fed-ui.fed-ui-animation-show.disable.remember-me  
                                                span.shared-icon.icon_sign_in
                                                    svg(
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        viewBox="0 0 24 24"
                                                        width="24"
                                                        height="24"
                                                        stroke="currentcolor"
                                                        stroke-width="4"
                                                        stroke-linecap="butt"
                                                        stroke-linejoin="miter"
                                                    )
                                                        path(d="M5 12h8 M15 10 L18 12 L15 14 Z")
                                                span.text.feat-split 계속
                                        div.si-container-footer.has-remember-me
                                            div.links.tk-subbody
                                                div.si-forgot-password
                                                    a(
                                                        target="_blank"
                                                        href="#"
                                                    )#iforgot-link.si-link.ax-outline.lite-theme-override
                                                        |암호를 
                                                        span.no-wrap.sk-icon.sk-icon-after.sk-icon-external
                                                            |잊으셨습니까?
                                                        span.sr-only
                                                            |새 창에서 열립니다.
                                                div
                                                    span.fat
                                                        |WeTube ID가 없으십니까? 
                                                    a(
                                                        href="/join"
                                                    )#create-link.si-forgot-password.si-link.ax-outline.lite-theme-override 
                                                        |지금 
                                                        span.no-wrap.sk-icon.sk-icon-after.sk-icon-external
                                                            |만드세요.
                                        if wrongPasswordError
                                            div.signin-error
                                                div.pop-container
                                                    div(style="border: 1px solid #000;").error.pop-bottom
                                                        p#errMsg.fat 암호가 올바르지 않습니다.
                                                        a(href="#")
                                                            | 암호를
                                                            span 잊으셨습니까?
                                        if noUserExistError
                                            div.form-message-wrapper
                                                span(dir="auto").form-message 입력하신 유저네임/이메일 을 쓰는 유저가 존재하지 않습니다.
                                        if unexpectedError
                                            div.form-message-wrapper
                                                span(dir="auto").form-message 예기치 못한 오류 발생. 다시 시도해 주세요.
    div.as-chat.rs-chat
        div.rs-chat-content.as-l-container
            div
                |도움이 더 필요하신가요? 
                a(href="#" target="_blank").as-chat-button
                    |지금 채팅하기
                    span.a11y (새 창에서 열림) 
                |  또는 
                span 000-000-0000
                | 번호로 문의하세요.
    div#oauth
        button(onclick="window.location.href='gh/start'")#gitgub_oauth_button
